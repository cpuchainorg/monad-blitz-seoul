{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/defs"
        ]
    },
    "include": [
        "./ignition",
        "./scripts",
        "./src",
        "./test",
        "./typechain-types"
    ],
    "exclude": ["node_modules"],
    "files": ["./hardhat.config.ts"]
}
